{
    "name": "vscode-dify-assistant",
    "displayName": "VS Code DIFY Assistant",
    "description": "AI-powered code understanding with DIFY integration",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:difyassistant.analyzeProject",
        "onCommand:difyassistant.askQuestion",
        "onCommand:difyassistant.refreshTree",
        "onView:difyassistant-sidebar",
        "onView:difyassistant.treeView",
        "workspaceContains:**/*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "difyassistant",
                    "title": "DIFY Assistant",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "views": {
            "difyassistant": [
                {
                    "id": "difyassistant-sidebar",
                    "name": "DIFY Assistant",
                    "type": "webview",
                    "icon": "resources/sidebar-icon.svg",
                    "visibility": "visible",
                    "when": "workspaceHasFolder"
                }
            ],
            "explorer": [
                {
                    "id": "difyassistant.treeView",
                    "name": "DIFY Project Structure",
                    "icon": "resources/sidebar-icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "difyassistant.analyzeProject",
                "title": "DIFY: Analyze Project Structure"
            },
            {
                "command": "difyassistant.askQuestion",
                "title": "DIFY: Ask Question About Codebase"
            },
            {
                "command": "difyassistant.openSidebar",
                "title": "DIFY: Open DIFY Assistant Sidebar"
            },
            {
                "command": "difyassistant.refreshTree",
                "title": "DIFY: Refresh Project Structure"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "difyassistant.refreshTree",
                    "when": "view == difyassistant.treeView",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint .",
        "pretest": "npm run lint"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "fs-extra": "^11.2.0",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^7.1.4",
        "@types/node": "^16.18.0",
        "@types/uuid": "^10.0.0",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.0",
        "glob": "^7.1.7",
        "typescript": "^4.4.4"
    }
}